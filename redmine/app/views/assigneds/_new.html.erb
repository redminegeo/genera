<h3 class="title"><%= l(:permission_add_issue_assigneds) %></h3>
  
  <%= form_tag({:controller => 'assigneds',
              :action  => 'append',
              :object_type => (assigned && assigned.class.name.underscore),
              :object_id => assigned,
              :project_id => @project},
             :remote => true,
             :method => :post,
             :id => 'new-assigned-form') do %>

    <p><%= label_tag 'user_search', l(:label_user_search) %><%= text_field_tag 'user_search', nil %></p>

    <%= javascript_tag "observeSearchfield('user_search', 'users_for_assigned', '#{ escape_javascript url_for(:controller => 'assigneds',
              :action => 'autocomplete_for_assigned',
              :object_type => (assigned && assigned.class.name.underscore),
              :object_id => assigned,
              :project_id => @project) }')" %>

    <div id="users_for_assigned">
      <%= principals_check_box_tags('assigned[user_ids][]', users) %>
    </div>

    <p class="buttons">
      <%= submit_tag l(:button_add), :name => nil, :onclick => "hideModal(this);" %>
      <%= submit_tag l(:button_cancel), :name => nil, :onclick => "hideModal(this);", :type => 'button' %>
    </p>
  <% end %> 

